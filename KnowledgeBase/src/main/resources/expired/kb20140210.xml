  <kb:data>

    <kb:features>
      <kb:feature id="f0001">
        <kb:label>A decimal number</kb:label>
        <kb:value>42.0</kb:value>
        <kb:featureValueType>float</kb:featureValueType>
      </kb:feature>
      <kb:feature id="f0002">
        <kb:label>A Range from 1 to 10</kb:label>
        <kb:range>
          <kb:minValue>1</kb:minValue>
          <kb:maxValue>10</kb:maxValue>
        </kb:range>
        <kb:featureValueType>integer</kb:featureValueType>
      </kb:feature>
      <kb:feature id="f0003">
        <kb:label>Just a String</kb:label>
        <kb:value>String Text Characters Letters Whatever</kb:value>
        <kb:featureValueType>string</kb:featureValueType>
      </kb:feature>
      <kb:feature id="f0004">
        <kb:label>This is a boolean Value</kb:label>
        <kb:value>true</kb:value>
        <kb:featureValueType>boolean</kb:featureValueType>
      </kb:feature>
    </kb:features>

