        <kb:label>JaEjbDbCo#store:data/mysql</kb:label>
        <kb:variantTrigger variantID="V2.11" />
      </kb:event>
      <kb:event context="V1.3 P2.4" variantID="V1.3" id="E-EJB-DB-PGSQL">
