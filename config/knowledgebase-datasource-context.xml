<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:util="http://www.springframework.org/schema/util"
  xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

  <!--
  Define your Datasource for the Knowledgebase here. This can be any 
  kind of Bean as long as it is a org.springframework.core.io.Resource and 
  the delivered data is XML valid against the kb.xsd
  -->

  <!-- This Definition will use the packaged KB from within the JAR-File -->
  <!--
  <bean id="kbXmlSource" class="org.springframework.core.io.ClassPathResource">
    <constructor-arg index="0" type="java.lang.String" value="kb.xml" />
  </bean>
  -->

  <!-- This Definition will look for a custom KB within the psiKeds-Configuration-Directory -->
  <bean id="kbXmlSource" class="org.psikeds.common.config.FileSystemResource"> 
    <constructor-arg index="0" type="java.lang.String" value="kb.xml" />
  </bean>

</beans>
