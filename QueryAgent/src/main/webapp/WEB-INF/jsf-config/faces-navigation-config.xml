<faces-config version="2.1"
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">

  <navigation-rule>
    <from-view-id>/gui/home.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/gui/knowledge.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/gui/knowledge.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/gui/knowledge.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>prediction</from-outcome>
      <to-view-id>/gui/prediction.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    <navigation-case>
      <from-outcome>choices</from-outcome>
      <to-view-id>/gui/choices.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    <navigation-case>
      <from-outcome>apppkgs</from-outcome>
      <to-view-id>/gui/apppkgs.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    <navigation-case>
      <from-outcome>back</from-outcome>
      <to-view-id>/gui/home.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/gui/prediction.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/gui/knowledge.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    <navigation-case>
      <from-outcome>back</from-outcome>
      <to-view-id>/gui/knowledge.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/gui/choices.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/gui/knowledge.xhtml</to-view-id>
      <redirect />
    </navigation-case>
    <navigation-case>
      <from-outcome>back</from-outcome>
      <to-view-id>/gui/knowledge.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/gui/apppkgs.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>back</from-outcome>
      <to-view-id>/gui/knowledge.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <!-- wildcard from-view-id; everywhere "home" leads to homepage -->
    <from-view-id>*</from-view-id>
    <navigation-case>
      <from-outcome>home</from-outcome>
      <to-view-id>/gui/home.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <!-- wildcard from-view-id; everywhere "error" leads to error page -->
    <from-view-id>*</from-view-id>
    <navigation-case>
      <from-outcome>error</from-outcome>
      <to-view-id>/gui/error.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </navigation-rule>

</faces-config>
